
def main():
    game = raw_input("Do you want to (p)ick a number or (g)uess a number?\n")
    if game == "p":
        pick()
    elif game == "g":
        guess_num()
    else:
        print "Well that wasnt an option...\n"
        main()

def guess_num():
    import random
    
    print ("I'm thinking of a number between 1 and 100.\n" +
           "Guess a number, and I'll tell you if you're\n" +
           "too high, too low, or go it right.\n" +
           "Best of luck to you!")

    counter = 0
    number = random.randint(1,100)
    guessRight = "false"
    
    while (guessRight == "false"):
        counter = counter + 1
        guess = input("%d) Please enter a number.\n" % counter)
        if guess < number:
            print "Too low!\n"
        elif guess > number:
            print "Too High!\n"
        else:
            print "You got it!\n"
            guessRight = "true"
    print "It took %d turns" % counter
    replay_prompt(guess_num)

def pick():
    guess = 64
    guessRight = "false"
    counter = 0
    upperBound = 100
    lowerBound = 1
    print ("Please think of a number between one and\n" +
           "one hundered. I'll guess your number. You\n" +
           "tell me if I'm too high, too low, or correct.\n")
    
    while guessRight == "false":
        counter = counter + 1
        print ("I guess: %d" % guess)
        response = raw_input("too (h)igh, too (l)ow, or (c)orrect?\n")
        if response == "h":
            upperBound = guess
            guess = (upperBound + lowerBound) / 2
        elif response == "l":
            if guess == 99:
                guess = 100
            else:
                lowerBound = guess
                guess = (upperBound + lowerBound) / 2
        elif response == "c":
            guessRight = "true"
        else:
            print "Hmmm... That wasn't one of the options. Let's try again.\n"
            counter = counter - 1
    print ("I got it! it took %d turns." % counter)
    replay_prompt(pick)

def replay_prompt(game):
    replay = raw_input("Do you want to play again?\n(y)es, (n)o, or (m)enu?\n")
    if replay == "y":
        game()
    elif replay == "m":
        main()
    else:
        print "Bye! Thanks for playing!"

main()
